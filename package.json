{
  "name": "@a5gard/bifrost",
  "version": "1.0.1",
  "description": "Platform-agnostic project creator with extensible template system",
  "type": "module",
  "bin": {
    "create-bifrost": "./dist/index.js"
  },
  "scripts": {
    "copy-registry": "bun copy-registry.js",
    "build:tsup": "tsup src/index.ts --format esm --dts --clean",
    "build": "npm run copy-registry && npm run build:tsup",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "create",
    "bifrost",
    "stack",
    "template",
    "scaffold",
    "react",
    "remix",
    "nextjs",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.3.3",
    "tsup": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
